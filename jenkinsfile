pipeline{
    agent any
        tools {
        maven 'Maven' 
    }
    stages{
        stage("test"){
            steps{
                sh "mvn test"
                sh "mvn --version"
                
            }
        }
        stage("Build"){
            steps{
                sh "mv package"
                
            }
        }
        stage("Deploy on test"){
            steps{
                // deploy on container -> plugin
                
                
            }
        }
        stage("Deploy on prod"){
            steps{
                // deploy on container -> plugin
                
                
            }
        }       
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
